@page
@model ASP_NETCore_RazorPages.Pages.LoginModel
@{
}

<div class="row">
    <div class="col-12" style="margin:10px auto">
        <h3 style="text-align:center">Login system</h3>
    </div>
    <div class ="col-12">
        @{
            if(TempData["msg"] != null)
            {
                <span class="alert alert-danger">@TempData["msg"]</span>
            }
        }
    </div>
    <div class="col-12">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Account.Email" class="form-label"/>
                <input class="form-control" asp-for="Account.Email"/>
                <span asp-validation-for="Account.Email"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Account.Password" class="form-label"/>
                <input asp-for="Account.Password" class="form-control"/>
                <span asp-validation-for="Account.Password"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Login">
            </div>
        </form>
    </div>
</div>
